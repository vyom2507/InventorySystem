<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminController">
   <children>
      <Label layoutX="24.0" layoutY="24.0" text="Admin Dashboard">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <TableView fx:id="tableProducts" layoutX="24.0" layoutY="70.0" prefHeight="300.0" prefWidth="700.0">
        <columns>
          <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="colName" prefWidth="300.0" text="Product Name" />
          <TableColumn fx:id="colQty" prefWidth="150.0" text="Quantity" />
          <TableColumn fx:id="colPrice" prefWidth="150.0" text="Price" />
        </columns>
      </TableView>
      
      <TextField fx:id="txtName" layoutX="24.0" layoutY="390.0" prefWidth="200.0" promptText="Name" />
      <TextField fx:id="txtQty" layoutX="235.0" layoutY="390.0" prefWidth="80.0" promptText="Qty" />
      <TextField fx:id="txtPrice" layoutX="325.0" layoutY="390.0" prefWidth="80.0" promptText="Price" />
      
      <HBox layoutX="420.0" layoutY="388.0" spacing="15.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addProduct" prefWidth="80.0" text="Add" />
            <Button mnemonicParsing="false" onAction="#updateProduct" prefWidth="80.0" text="Update" />
            <Button mnemonicParsing="false" onAction="#deleteProduct" prefWidth="80.0" text="Delete" />
            <Button mnemonicParsing="false" onAction="#logout" prefWidth="80.0" style="-fx-background-color: #e74c3c;" text="Logout" />
         </children>
      </HBox>
      
      <Label fx:id="lblMessage" layoutX="24.0" layoutY="440.0" textFill="BLUE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
   </children>
</AnchorPane>